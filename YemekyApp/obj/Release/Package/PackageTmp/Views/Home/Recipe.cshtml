@model YemekyApp.Models.Recipe
@{
    ViewBag.Title = "About";
}


<!-- Recipe Section
=================== -->
<section id="recipe">
    <div class="container">
        <div class="row">
            <!-- Title -->
            <div class="col-12">
                <h2 id="recipeName"></h2>
            </div>
        </div>
        <div class="row vertical-align">
            <div class="col-12">
                <!-- Picture -->
                <div class="col-md-8 pull-left wow zoomInLeft">
                    <img src="~/Content/images/upload/@Model.Image" id="image" alt="bbq-pork-ribs" class="recipe-picture" />
                </div>
                <!-- Info -->
                <div class="col-md-4 pull-right wow lightSpeedIn">
                    <div class="recipe-info">
                        <h3>Genel Bilgiler</h3>
                        <!-- Time -->
                        <div class="row">
                            <div class="col-2 text-center">
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                            </div>
                            <div class="col-6">Hazırlama Süresi</div>
                            <div id="time" class="col-4">@Model.Time</div>
                        </div>
                        <!-- Difficulty -->
                        <div class="row">
                            <div class="col-2 text-center">
                                <i class="fa fa-area-chart" aria-hidden="true"></i>
                            </div>
                            <div class="col-6">Zorluk</div>
                            <div class="col-4" id="difficulty">
                                @Model.Difficulty
                            </div>
                        </div>
                        <!-- Serves -->
                        <div class="row">
                            <div class="col-2 text-center">
                                <i class="fa fa-users" aria-hidden="true"></i>
                            </div>
                            <div class="col-6">Kaç Kişilik</div>
                            <div class="col-4" id="servings">@Model.Servings</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Directions -->
        <div class="row wow slideInUp">
            <div class="col-12">
                <div class="recipe-ingredients">
                    <h3>Bilgi</h3>
                    <ol>
                        @Model.Descripition
                    </ol>
                </div>
            </div>
        </div>
        <!-- Ingredients -->
        <div class="row wow slideInUp">
            <div class="col-12">
                <div class="recipe-ingredients">
                    <h3>Malzemeler</h3>
                    <dl id="ingredientList" class="ingredients-list">
                        @*<dt>10</dt>
                        <dd>country-style pork ribs</dd>
                        <dt>2</dt>
                        <dd>tablespoons garlic powder</dd>
                        <dt>1</dt>
                        <dd>tablespoon salt</dd>
                        <dt>1</dt>
                        <dd>tablespoon pepper</dd>
                        <dt>2</dt>
                        <dd>cups of your favorite barbecue sauce</dd>*@
                    </dl>
                </div>
            </div>
        </div>
        <!-- Directions -->
        <div class="row wow slideInUp">
            <div class="col-12">
                <div class="recipe-directions">
                    <h3>Nasıl Yapılır?</h3>
                    <ol id="directionList"></ol>
                </div>
            </div>
        </div>
        
        <!-- Back to recipes -->
        <div class="row wow rollIn">
            <div class="col-12 text-center">
                @*<a href="index.html">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Go to back to recipes.
                </a>*@
            </div>
        </div>
    </div>
</section>
@section scripts {
    <script>
        
      

        $.ajax({
            url: '/recipeList/' + @Model.ID,
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                $("#time").html(data.data["0"].RecipeTime);
                $("#image").attr("src", "/Content/images/upload/" + data.data["0"].Image);
                $("#servings").html(data.data["0"].Servings);
                $("#difficulty").html(data.data["0"].Difficulty);

                $.each(data.data["0"].Directions, function(index, value) {
                    $('#directionList').append($('<li>').text(value.Description));
                });

                $.each(data.data["0"].Ingredients, function(index, value) {
                    $('#ingredientList').append($('<dt>').text(value.Piece));
                    $('#ingredientList').append($('<dd>').text(value.Description));
                });
            },
            error: function (err) {
                alert("hata");
            }
        });



    </script>
}