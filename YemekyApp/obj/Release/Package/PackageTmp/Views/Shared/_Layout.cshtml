                        </div>
                    </div>
                    <div class="logofordark"><img src="~/Content/images/dummy-logo-for-darkbg.png" alt="" /> </div>
                </li>
                <li><a data-theme="a" data-textonly="false" data-textvisible="true" data-msgtext="Yükleniyor..." data-icon="fa fa-arrow" data-iconpos="right" href="/" class="active"><i class="fa fa-home"></i><span class="hometext">Anasayfa</span></a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li><a data-theme="a" data-textonly="false" data-textvisible="true" data-msgtext="Yükleniyor..." data-icon="fa fa-arrow" data-iconpos="right" href="@Url.Action("LogOut","Home")"><i class="fa fa-key"></i> Çıkış Yap</a></li>

                }
                else
                {
                    <li><a data-theme="a" data-textonly="false" data-textvisible="true" data-msgtext="Yükleniyor..." data-icon="fa fa-arrow" data-iconpos="right" href="/Home/Login"><i class="fa fa-user-circle"></i>Giriş Yap<span class="arrow"></span></a></li>

                    <li><a data-theme="a" data-textonly="false" data-textvisible="true" data-msgtext="Yükleniyor..." data-icon="fa fa-arrow" data-iconpos="right" href="/register"><i class="fa fa-user-plus"></i>Kayıt Ol<span class="arrow"></span></a></li>

                }
                @{
                    YemekyAppEntities _db = new YemekyAppEntities();

                    var userFind = _db.User.FirstOrDefault(x => x.Username == @User.Identity.Name);

                    if (userFind?.Role == "Admin")
                    {
                        <li><a data-theme="a" data-textonly="false" data-textvisible="true" data-msgtext="Yükleniyor..." data-icon="fa fa-arrow" data-iconpos="right" href="@Url.Action("Recipes","Home")"><i class="fa fa-plus"></i>Tarifler<span class="arrow"></span></a></li>
                    }
                }

            </ul>
        </nav>
        <!--Menu HTML Code-->
